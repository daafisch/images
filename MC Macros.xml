<group name="MC Macros">
   <macro name="Read Error State Motor Controller" icon="INFO">
      <assert-service description="Ensure ROM3 Motor Controller" uuid="3b610000-fbfc-4b0b-8e41-1186c1abc99a">
         <assert-characteristic description="Ensure Get Error Axis/Motor/Encoder" uuid="3b610005-fbfc-4b0b-8e41-1186c1abc99a">
            <property name="READ" requirement="MANDATORY"/>
         </assert-characteristic>
         <assert-characteristic description="Ensure Get Temp Bridge/Shunt/Motor" uuid="3b610006-fbfc-4b0b-8e41-1186c1abc99a">
