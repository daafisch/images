<group name="EAP Macros">
   <macro name="Read Error State EAP" icon="INFO">
      <assert-service description="Ensure RomTech EAP" uuid="98ee0000-197f-4bf4-bd5c-105499be281a">
         <assert-characteristic description="Ensure Hardware Error" uuid="98ee0009-197f-4bf4-bd5c-105499be281a">
            <property name="READ" requirement="MANDATORY"/>
         </assert-characteristic>
         <assert-characteristic description="Ensure App Error" uuid="98ee0008-197f-4bf4-bd5c-105499be281a">
            <property name="READ" requirement="MANDATORY"/>
         </assert-characteristic>
         <assert-characteristic description="Ensure Hardware Status" uuid="98ee0007-197f-4bf4-bd5c-105499be281a">
            <property name="READ" requirement="MANDATORY"/>
         </assert-characteristic>
      </assert-service>
      <read description="Read value of Hardware Error" characteristic-uuid="98ee0009-197f-4bf4-bd5c-105499be281a" service-uuid="98ee0000-197f-4bf4-bd5c-105499be281a">
         <assert-value description="Assert value equals 0x00" value="00"/>
      </read>
      <read description="Read value of App Error" characteristic-uuid="98ee0008-197f-4bf4-bd5c-105499be281a" service-uuid="98ee0000-197f-4bf4-bd5c-105499be281a">
         <assert-value description="Assert value equals 0xFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF" value="FFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF"/>
      </read>
      <read description="Read value of Hardware Status" characteristic-uuid="98ee0007-197f-4bf4-bd5c-105499be281a" service-uuid="98ee0000-197f-4bf4-bd5c-105499be281a">
         <assert-value description="Assert value equals 0x0000" value="0000"/>
      </read>
   </macro>
   <macro name="Home Right EAP" icon="PLAY">
      <assert-service description="Ensure RomTech EAP" uuid="98ee0000-197f-4bf4-bd5c-105499be281a">
         <assert-characteristic description="Ensure Home : 1L 2R 3B" uuid="98ee0001-197f-4bf4-bd5c-105499be281a">
            <property name="WRITE" requirement="MANDATORY"/>
         </assert-characteristic>
      </assert-service>
      <write description="Write 0x02 to Home : 1L 2R 3B" characteristic-uuid="98ee0001-197f-4bf4-bd5c-105499be281a" service-uuid="98ee0000-197f-4bf4-bd5c-105499be281a" value="02" type="WRITE_REQUEST"/>
   </macro>
   <macro name="Stop Right EAP" icon="PLAY">
      <assert-service description="Ensure RomTech EAP" uuid="98ee0000-197f-4bf4-bd5c-105499be281a">
         <assert-characteristic description="Ensure Stop" uuid="98ee0005-197f-4bf4-bd5c-105499be281a">
            <property name="WRITE" requirement="MANDATORY"/>
         </assert-characteristic>
      </assert-service>
      <write description="Write 0x02 to Stop" characteristic-uuid="98ee0005-197f-4bf4-bd5c-105499be281a" service-uuid="98ee0000-197f-4bf4-bd5c-105499be281a" value="02" type="WRITE_REQUEST"/>
   </macro>
   <macro name="Move Right EAP in and out" icon="PLAY">
      <assert-service description="Ensure RomTech EAP" uuid="98ee0000-197f-4bf4-bd5c-105499be281a">
         <assert-characteristic description="Ensure Continuous" uuid="98ee0006-197f-4bf4-bd5c-105499be281a">
            <property name="WRITE" requirement="MANDATORY"/>
         </assert-characteristic>
      </assert-service>
      <write description="Write 0x02 to Continuous" characteristic-uuid="98ee0006-197f-4bf4-bd5c-105499be281a" service-uuid="98ee0000-197f-4bf4-bd5c-105499be281a" value="02" type="WRITE_REQUEST"/>
